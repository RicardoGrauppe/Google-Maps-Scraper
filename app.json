{
  "name": "Google Maps Scraper",
  "description": "Uma aplicação Flask para fazer scraping do Google Maps",
  "repository": "https://github.com/seu-usuario/google-maps-scraper",
  "keywords": ["python", "flask", "scraping", "google-maps"],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-google-chrome"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-chromedriver"
    },
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "GOOGLE_CHROME_BIN": {
      "description": "Caminho para o binário do Chrome",
      "value": "/app/.chrome-for-testing/chrome-linux64/chrome"
    },
    "CHROMEDRIVER_PATH": {
      "description": "Caminho para o ChromeDriver",
      "value": "/app/.chromedriver/bin/chromedriver"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  }
}